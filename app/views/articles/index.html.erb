<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Wyswietl', article_path(article) %></td>
        <td><%= link_to 'Edytuj', edit_article_path(article) %></td>
        <td><%= link_to 'Usun', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'nowy artykul', new_article_path, class:"btn btn-default" %>
